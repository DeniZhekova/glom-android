<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/userAvatar"
        android:layout_width="@dimen/user_avatar_width"
        android:layout_height="@dimen/user_avatar_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/user_avatar_margin_top"
        android:layout_marginBottom="@dimen/user_avatar_margin_bottom"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/userPrimaryText"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/user_avatar_primary_height"
        android:layout_gravity="center"
        android:textSize="@dimen/user_avatar_primary_textsize"
        android:layout_marginTop="@dimen/user_avatar_primary_margin_top"
        android:layout_marginBottom="@dimen/user_avatar_primary_margin_bottom" />

    <TextView
        android:id="@+id/userSecondaryText"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/user_avatar_secondary_height"
        android:layout_gravity="center"
        android:textSize="@dimen/user_avatar_secondary_textsize"
        android:layout_marginTop="@dimen/user_avatar_secondary_margin_top"
        android:layout_marginBottom="@dimen/user_avatar_secondary_margin_bottom" />

</LinearLayout>