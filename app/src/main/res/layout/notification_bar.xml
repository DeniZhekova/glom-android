<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_layout"
    android:layout_width="match_parent"
    android:layout_height="32dp">

    <TextView
        android:id="@+id/notification_text"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/notificationSuccessBackground"
        android:textColor="@color/notificationTextColor"
        android:textSize="@dimen/notification_text_size"
        android:text="@string/notification_placeholder"/>

    <ImageView
        android:id="@+id/notification_close_btn"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_action_close" />

</RelativeLayout>
