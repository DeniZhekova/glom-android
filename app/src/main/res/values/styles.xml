<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <!-- No background theme -->
    <style name="Theme.NoBackground" parent="AppTheme">
        <item name="android:windowBackground">@null</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:actionBarSize">@dimen/toolbar_height</item>
        <item name="actionBarSize">@dimen/toolbar_height</item>
    </style>

    <!-- Alert Dialog -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Floating action button -->
    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_large</item>
        <item name="android:src">@drawable/ic_action_new</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <!-- Base AppBarLayout theme -->
    <style name="AppMaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Base Toolbar theme -->
    <style name="AppMaterialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Tab bar layout -->
    <style name="AppMaterialTheme.TabBarLayout" parent="Widget.Design.TabLayout" >
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">@color/tabIndicatorColor</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <!-- Toolbar Title -->
    <style name="Toolbar.TitleText" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
    </style>
    <style name="Toolbar.SubtitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/toolbar_subtitle_text_size</item>
    </style>

</resources>
