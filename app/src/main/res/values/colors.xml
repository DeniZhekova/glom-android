<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- application main palette
        See http://www.colorcombos.com/color-schemes/907/ColorCombo907.html
         http://www.colorcombos.com/color-schemes/134/ColorCombo134.html
         http://www.colorcombos.com/color-schemes/202/ColorCombo202.html -->
    <color name="mainPrimary">#D74B4B</color>
    <color name="mainSecondary">#EE3233</color>
    <color name="lightPrimary">#DCDDD8</color>
    <color name="lightSecondary">#E0E9E9</color>
    <color name="darkPrimary">#475F77</color>
    <color name="darkSecondary">#455372</color>
    <color name="darkTertiary">#354B5E</color>
    <color name="textLightPrimary">#FFFFFF</color>
    <color name="textLightSecondary">#b3ffffff</color>
    <color name="textDarkPrimary">#de000000</color>
    <color name="textDarkSecondary">#8a000000</color>

    <!-- generic UI elements colors -->
    <color name="colorPrimary">@color/mainPrimary</color>
    <color name="colorPrimaryDark">@color/mainSecondary</color>
    <color name="textColorPrimary">@color/textLightPrimary</color>
    <color name="textColorSecondary">@color/textLightSecondary</color>
    <color name="windowBackground">@color/lightPrimary</color>
    <color name="colorAccent">@color/mainSecondary</color>
    <color name="lightBackground">@color/lightPrimary</color>
    <color name="darkBackground">@color/darkPrimary</color>
    <color name="tabIndicatorColor">@color/lightSecondary</color>

    <!-- text colors -->
    <color name="darkPrimaryText">@color/textDarkPrimary</color>
    <color name="darkSecondaryText">@color/textDarkSecondary</color>
    <color name="cardActionButtonTextColor">@color/mainPrimary</color>
    <color name="movieCardReleaseDateBackground">#00e5ff</color>
    <color name="defaultIncomingTextBackground">#cfd8dc</color>
    <color name="defaultIncomingTextBackgroundPressed">#9e9e9e</color>
    <color name="defaultOutgoingTextBackground">@color/colorPrimary</color>
    <color name="defaultOutgoingTextBackgroundPressed">@color/colorPrimaryDark</color>
    <color name="defaultIncomingTextColor">#000000</color>
    <color name="defaultOutgoingTextColor">#FFFFFF</color>
    <color name="darkTertiaryText">@color/darkTertiary</color>

    <!-- app-wide notification bar -->
    <color name="notificationTextColor">@color/textLightPrimary</color>
    <color name="notificationWarningBackground">#ffa000</color>
    <color name="notificationSuccessBackground">#00e676</color>

    <!-- other UI components -->
    <color name="menuOverlay">#88000000</color>
    <color name="lineDivider">#1f000000</color>
    <color name="selectItemOverlay">#38000000</color>
</resources>