<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardView.BoardItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp" >

        <TextView
            android:textAppearance="@style/TextAppearance.H3"
            android:id="@+id/event_card_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/event_card_start_time_text"
            android:textAppearance="@style/TextAppearance.H5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/event_card_title_text"
            app:layout_constraintStart_toStartOf="@+id/event_card_title_text"
            android:layout_marginTop="8dp"
            android:textColor="@color/warm_grey" />

        <TextView
            android:id="@+id/event_card_end_time_text"
            android:textAppearance="@style/TextAppearance.H5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/event_card_title_text"
            app:layout_constraintStart_toEndOf="@+id/event_card_start_time_text"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/warm_grey" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>